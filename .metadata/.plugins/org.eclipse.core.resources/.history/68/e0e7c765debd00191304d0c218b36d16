package com.ladun.game.objects;

import com.ladun.engine.GameContainer;
import com.ladun.engine.Renderer;
import com.ladun.engine.Time;
import com.ladun.game.GameManager;

public class Interior extends GameObject{

	
	private boolean animation;
	private float anim;
	private float animSpeed;
	private int animMaxIndex;
	
	private String imageName;
	private boolean collision;
	
	public Interior(String imageName,float posX,float posY) {
		this.imageName = imageName;
		this.collision = false;
	}

	public Interior(String imageName,
			float posX,float posY,
			int width, int height) {
		this.imageName = imageName;
		this.collision = true;
		this.width = width;
		this.height = height;
	}
	public Interior(String imageName,
			float posX,float posY,
			int radius) {
		this.imageName = imageName;
		this.collision = true;
		this.width = radius;
		this.height = radius;
	}
	public Interior(String imageName,
			float posX,float posY,
			float animSpeed,int animMaxIndex) {
		this.imageName = imageName;
		this.collision = false;
		
		this.animSpeed =animSpeed;
		this.animMaxIndex = animMaxIndex;
		this.animation = true;
	}
	
	@Override
	public void update(GameContainer gc, GameManager gm) {
		// TODO Auto-generated method stub
		
		if(animation) {
			anim += Time.DELTA_TIME * animSpeed;
		}
	}

	@Override
	public void render(GameContainer gc, Renderer r) {
		// TODO Auto-generated method stub
		r.drawImage(gc.getImageLoader().getImage(imageName), (int)posX	, (int)posY, angle);
	}

	@Override
	public void collision(GameObject other) {
		// TODO Auto-generated method stub
		
	}

}
