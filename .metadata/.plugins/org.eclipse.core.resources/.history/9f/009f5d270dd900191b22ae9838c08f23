package com.ladun.game.Item;

import java.util.ArrayList;

import com.ladun.engine.GameContainer;
import com.ladun.engine.Renderer;
import com.ladun.game.GameManager;

public class Shop {
	public enum JobType {
		Public(0) ,Warrior(50),Archer(100) ,Spear(150), Assasin(200);
		private final int value;
		private JobType(int value) {
			this.value = value;
		}
		
		public int getValue() {
			return value;
		}
	}
	
	private final int TYPE_INTERVAL = 50;
	
	private JobType;
	private boolean active;	
	private ArrayList<ShopSlot> slots = new ArrayList<ShopSlot>();
	
	public Shop() {
		active = true;
	}
	
	public void show(GameManager gm,JobType type) {
		active = true;
		int slotIndex = 0;
		for(Item _item : gm.getItemDatabase().getItemList()) {
			if(_item.getID() / TYPE_INTERVAL == type.getValue() / TYPE_INTERVAL) {
				if(slotIndex < slots.size()){
					slots.get(slotIndex).setItem(_item);
					slotIndex++;
				}else {
					slots.add(new ShopSlot(_item));
				}
			}
		}
	}
	
	public void update(GameContainer gc, GameManager gm) {
		if(!active)
			return;
		
		for(ShopSlot _slot : slots) {
			if(_slot.isActive())
				_slot.update(gc, gm);
		}
	}
	public void render(GameContainer gc, Renderer r) {
		
		for(ShopSlot _slot : slots) {
			if(_slot.isActive())
				_slot.render(gc, r);
		}
	}
	//---------------------------------------------
	public boolean isActive() {
		return active;
	}

	public void setActive(boolean active) {
		this.active = active;
	}
	
	
}
