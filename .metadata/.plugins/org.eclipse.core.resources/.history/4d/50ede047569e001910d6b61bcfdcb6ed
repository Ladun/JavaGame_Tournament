package com.ladun.game.objects.projectile;

import com.ladun.engine.GameContainer;
import com.ladun.engine.Renderer;
import com.ladun.game.GameManager;
import com.ladun.game.objects.GameObject;

public class Bullet extends Projectile {

	public Bullet(float posX, float posY, float posZ, float angle,float speed, float damage) {
		super(speed, damage);
		//TODO position translate -> tileX,Z offX,Z
		this.posY = posY;
		this.angle = angle;
		this.s = (float)Math.sin(Math.toRadians(angle));
		this.c = (float)Math.cos(Math.toRadians(angle));
		this.width = 40;
		this.height = 10;
	}

	@Override
	public void update(GameContainer gc, GameManager gm, float dt) {
		// TODO Auto-generated method stub
		
		this.AdjustPosition();
	}

	@Override
	public void render(GameContainer gc, Renderer r) {
		// TODO Auto-generated method stub
		r.drawFillRect((int)posX, (int)posY, width, height, angle, 0xff385610);
	}

	@Override
	public void collision(GameObject other) {
		// TODO Auto-generated method stub
		
	}

}
