package com.ladun.game.components;

import com.ladun.engine.GameContainer;
import com.ladun.engine.Renderer;
import com.ladun.game.GameManager;
import com.ladun.game.Physics;
import com.ladun.game.objects.GameObject;

public class CircleCollider extends Collider{

	private int centerX,centerY;
	private int radius;
	private int lastCenterX, lastCenterY;
	
	
	public CircleCollider(GameObject parent) {
		super(parent);
		this.tag = "circleCollider";
		this.type = Type.CIRCLE;
	}

	@Override
	public void update(GameContainer gc, GameManager gm, float dt) {
		// TODO Auto-generated method stub
		lastCenterX = centerX;
		lastCenterY = centerY;

		radius = ((parent.getWidth() - parent.getpL() - parent.getpR())/ 2);
		centerX = (int)(parent.getPosX()) + ((parent.getWidth() - parent.getpL() - parent.getpR())/ 2) + parent.getpL();
		centerY = (int)(parent.getPosY()) + ((parent.getHeight() -parent.getpB() - parent.getpT())/2) + parent.getpT();
		

		Physics.colliderComponent(this);
	}

	@Override
	public void render(GameContainer gc, Renderer r) {
		// TODO Auto-generated method stub
		r.drawCircle(centerX, centerY, radius, 0xff000000);
		
	}
	//---------------------------------------------------------------
	public int getCenterX() {
		return centerX;
	}

	public void setCenterX(int centerX) {
		this.centerX = centerX;
	}

	public int getCenterY() {
		return centerY;
	}

	public void setCenterY(int centerY) {
		this.centerY = centerY;
	}

	public int getRadius() {
		return radius;
	}

	public void setRadius(int radius) {
		this.radius = radius;
	}

	public int getLastCenterX() {
		return lastCenterX;
	}

	public void setLastCenterX(int lastCenterX) {
		this.lastCenterX = lastCenterX;
	}

	public int getLastCenterY() {
		return lastCenterY;
	}

	public void setLastCenterY(int lastCenterY) {
		this.lastCenterY = lastCenterY;
	}

}
